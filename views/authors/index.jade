extends ../layout

block content
  h1 Authors

  table.table.table-striped
      thead
        tr
          th ID
          th Author

      tbody
        for author in allAuthors
          tr
            td= author.id
            td 
              a(href='/authors/' + author.id)= author.first + ' ' + author.last

  a.btn.btn-primary(href='/authors/new', role='button') New Author
