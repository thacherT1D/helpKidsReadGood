extends ../layout

block content
  h1 Books

  table.table.table-striped
      thead
        tr
          th ID
          th Title
          th Genre
          th Author

      tbody
        for book in allBooks
          tr
            td= book.id
            td
              a(href='/books/' + book.id)= book.title
            td= book.genre
            for author in book.authorArray
              td= author

  a.btn.btn-primary(href='/books/new', role='button') New Book
