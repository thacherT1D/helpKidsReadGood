extends ../layout

block content
  h1 Books

  a(href="/books/new") New Book

  table
      thead
        tr
          th ID
          th Name
          th Author

      tbody
        for book in allBooks
          tr
            td= book.id
            td= book.name
            td= book.author
            td
              a(href='/books/' + book.id)= book.name
