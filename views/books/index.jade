extends ../layout

block content
  h1 Books

  a(href="/books/new") New Book

  table
      thead
        tr
          th ID
          th Title
          th Author
          th Genre

      tbody
        for book in allBooks
          tr
            td= book.id
            td
              a(href='/books/' + book.id)= book.title
            td= book.author
            td= book.genre
